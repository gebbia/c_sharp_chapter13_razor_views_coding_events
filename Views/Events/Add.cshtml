@model CodingEvents.ViewModels.AddEventViewModel;

<h1>Add Event</h1>

<form method="post" class="form-control">
    <div asp-controller="Events" asp-action="Add" class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" />
        <span asp-validation-for="Name"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" />
        <span asp-validation-for="Description"></span>
    </div>
    <br />
     <div class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail" type="text" />
        <span asp-validation-for="ContactEmail"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" type="text" />
        <span asp-validation-for="Location"></span>
    </div>
    <br />
         <div class="form-group">
        <label asp-for="NumberOfAttendees"># of Attendees</label>
        <input asp-for="NumberOfAttendees" type="text" />
        <span asp-validation-for="NumberOfAttendees"></span>
    </div>
    <br />
    <input type="submit" value="Add Event"/>
</form>


